{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": false,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "newLine": "LF",
    "strict": true,
    
    "allowJs": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": [
      "ESNext",
      "DOM"
    ]
  }
}